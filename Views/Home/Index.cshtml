@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Home Page";
}

<section class="container text-center my-5">
    <h1>Witaj w TravelApp!</h1>
    <p class="lead">
        Twoje miejsce pełne inspiracji podróżniczych! 
        Odkrywaj nowe miejsca, dziel się swoimi relacjami i korzystaj z porad doświadczonych podróżników.
    </p>
</section>

<div id="carouselExample" class="carousel slide" data-ride="carousel" data-interval="3500">
    <div class="carousel-indicators">
        <button type="button" data-target="#carouselExample" data-slide-to="0" class="active"></button>
        <button type="button" data-target="#carouselExample" data-slide-to="1"></button>
        <button type="button" data-target="#carouselExample" data-slide-to="2"></button>
    </div>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/slide1.jpg" class="d-block w-100" alt="Pierwsze zdjęcie">
        </div>
        <div class="carousel-item">
            <img src="~/images/slide2.jpg" class="d-block w-100" alt="Drugie zdjęcie">
        </div>
        <div class="carousel-item">
            <img src="~/images/slide3.jpg" class="d-block w-100" alt="Trzecie zdjęcie">
        </div>
    </div>

    <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Poprzednie</span>
    </a>
    <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Następne</span>
    </a>
</div>

<section class="container text-center my-5">
    <p>
        Niezależnie od tego, czy planujesz egzotyczną podróż, czy weekendowy wypad za miasto, 
        znajdziesz tutaj wartościowe wskazówki, recenzje i społeczność pełną pasji.
    </p>

    <p>
        Dołącz do nas, twórz własne relacje i dziel się swoimi doświadczeniami z innymi podróżnikami!
    </p>

    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <a href="@Url.Action("Stories", "Home")" class="btn btn-primary btn-lg mt-3 mb-5">Przejdź do relacji</a>
    }
    else
    {
        <a href="@Url.Action("Register", "Account")" class="btn btn-primary btn-lg mt-3 mb-5">Dołącz do społeczności!</a>
    }
</section>